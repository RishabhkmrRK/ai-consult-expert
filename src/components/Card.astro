---
import { Image } from "astro:assets";
const { imageSrc, imageAlt, category, title, desc, slug, hTag } = Astro.props;
const images = import.meta.glob<{ default: ImageMetadata }>(
  "/src/content/**/*.{jpeg,jpg,png,gif,webp,svg}"
);
---

<a
  href={`/${slug}`}
  class="w-full flex-[1_0_280px] min-w-70 max-w-90 bg-white p-4 flex flex-col gap-5 rounded-3xl shadow-md hover:shadow-lg border-2 border-secondary-300"
>
  <Image
    src={images[imageSrc]()}
    alt={imageAlt}
    width="400"
    height="225"
    loading="eager"
    class="rounded-2xl aspect-16/9 border-1 overflow-hidden object-cover object-bottom"
  />
  <div class="flex flex-col gap-2">
    <p class="font-bold text-md text-transparent bg-clip-text bg-linear-to-t from-orange-500 to-orange-500 py-0 capitalize">{category}</p>
    {
      hTag && (
        <h3 class="text-2xl font-bold py-0 line-clamp-2 overflow-hidden text-ellipsis">
          {title}
        </h3>
      )
    }
    {
      !hTag && (
        <h6 class="text-2xl font-bold py-0 line-clamp-2 overflow-hidden text-ellipsis">
          {title}
        </h6>
      )
    }
    <p
      class="text-lg text-justify py-0 line-clamp-3 overflow-hidden text-ellipsis"
    >
      {desc}
    </p>
  </div>
</a>
